<section class="login-wrapper ">
  {{!-- <div class="row">
    <div class="col-sm"> --}}
      <div class="stars">
        <div class="twinkling">
          <div class="clouds">

            <section class="login-form-wrapper">
              <h2 class="">Login</h2>

              <form action="/auth/login" method="POST" id="form-container">
                <div class="form-group row inline-block">
                  <label class="col-sm-4 col-form-label" for="username">Username</label>
                  <div class="col-sm-8 inline-block"><input id="username" type="text" name="username" placeholder="username"
                      class="form-control">
                  </div>
                </div>

                <div class="form-group row inline-block">
                  <label class=" col-sm-4 col-form-label" for="password">Password</label>
                  <div class="col-sm-8 inline-block"><input id="password" type="password" name="password" placeholder="password"
                      class="form-control">
                  </div>
                </div>
                <br>
                {{#if message }}
                <div class="error-message">{{ message }}</div>
                {{/if}}

                <div class="form-group row">

                  <div class="col-sm-8 offset-sm-4">
                    <button class="btn btn-primary">Login</button>
                  </div>
                </div>
                <p class="account-message">
                  Don't have an account yet?
                  <a href="/auth/signup">Signup</a>
                </p>
              </form>
            </section>

          </div>
        </div>

      </div>
      {{!-- </div> {{!-- ======> col-sm --}}
  </div> ======> row --}}
</section>