      <div class="stars">
        <div class="twinkling">
          <div class="clouds">

            <br>
            <br>
            <div class="mx-auto" style="width: 600px">
              {{!-- <section class="login-form-wrapper"> --}}

                <form action="/auth/signup" class="compatability" method="POST" id="form-container">
                  <h1>Sign up to get started</h1>
                  <div class="form-group row inline-block">
                    <label class="col col-form-label" for="username">Username</label>
                    <div class="col inline-block">
                      <input id="username" type="text" name="username" placeholder="JonSnow" class="form-control">
                    </div>
                  </div>

                  <div class="form-group row inline-block">
                    <label class="col-sm-4 col-form-label" for="password">Password</label>
                    <div class="col inline-block"><input id="password" type="password" name="password" placeholder="Your password"
                        class="form-control">
                    </div>
                  </div>
                  <br>
                  {{#if message }}
                  <div class="error-message">{{ message }}</div>
                  {{/if}}
                  <div class="form-group row">
                    <div class="col">
                      <button class="btn btn-primary col">Create account</button>
                    </div>
                  </div>
                  <p class="account-message">
                    Do you already have an account?
                    <a href="/auth/login">Login</a>
                  </p>


                </form>
                {{!--
              </section> --}}

            </div>
          </div>
        </div>
      </div>
